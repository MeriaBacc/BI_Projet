@model IEnumerable<Project_Dashboard.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Afficher Articles</h1>

<p>
    <a asp-action="Create">Créer un nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pourcentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pourcentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Article">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Article">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Article">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
